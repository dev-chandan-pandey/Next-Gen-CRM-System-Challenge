{
  "name": "nextgen-crm-backend",
  "version": "1.0.0",
  "description": "Next-Gen CRM backend (Express + Prisma + Socket.io)",
  "main": "src/server.js",
  "scripts": {
    "prisma:reset": "npx prisma migrate reset",
