    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^7.0.10",
    "socket.io": "^4.7.2",
    "zod": "^3.23.2"
  },
  "devDependencies": {
    "@quramy/jest-prisma": "^1.8.1",
    "jest": "^29.0.0",
    "nodemon": "^2.0.22",
    "pg-mem": "^3.0.5",
    "prisma": "^6.19.0",
    "supertest": "^6.3.3"
  }
