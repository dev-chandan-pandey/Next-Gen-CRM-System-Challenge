generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MANAGER
  SALES
}

enum Status {
  NEW
  CONTACTED
  QUALIFIED
  WON
  LOST
}

enum ActivityType {
  NOTE
  CALL
  MEETING
  STATUS_CHANGE
}

model User {
  id         Int        @id @default(autoincrement())
  name       String
  email      String     @unique
  password   String
  role       Role       @default(SALES)
  leads      Lead[]     @relation("UserLeads")
  activities Activity[]
  createdAt  DateTime   @default(now())
}

model Lead {
  id         Int        @id @default(autoincrement())
  name       String
  email      String?
  phone      String?
  status     Status     @default(NEW)
  owner      User?      @relation(fields: [ownerId], references: [id], name: "UserLeads")
  ownerId    Int?
  source     String?
  value      Float?
  activities Activity[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Activity {
  id        Int          @id @default(autoincrement())
  lead      Lead         @relation(fields: [leadId], references: [id])
  leadId    Int
  user      User         @relation(fields: [userId], references: [id])
  userId    Int
  type      ActivityType
  content   String?
  meta      Json?
  createdAt DateTime     @default(now())
}
